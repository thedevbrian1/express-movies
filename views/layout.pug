doctype html 
html 
    head 
        title= title 
        link(rel="stylesheet", href="/output.css")
    body(class="bg-[#2e3b5b] text-gray-200")    
        nav(class="flex items-center justify-between bg-[#58627c] py-6 px-24")
            a(href="/")
                img(src="/images/movie.svg", width="40px", height="40px")
            ul(class="flex gap-4 items-center")
                li(class="hover:text-orange-500 transition-colors ease-in-out duration-300")
                    a(href="/", class="active:text-orange-500") Home
                li(class="hover:text-orange-500 transition-colors ease-in-out duration-300")
                    a(href="/movies", class="active:text-orange-500") Movies
                li(class="hover:text-orange-500 transition-colors ease-in-out duration-300")
                    a(href="/series", class="active:text-orange-500") Series
        block content
        footer(class="w-full flex justify-center py-4 bg-[#58627c] mt-8") 
            p Copyright &copy; #{new Date().getFullYear()}


